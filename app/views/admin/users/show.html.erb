<p id="notice"><%= notice %></p>

<p>
  <h1>ユーザー詳細ページ</h1>
  <strong>ユーザー名:</strong>
  <%= @user.name %>
</p>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>Email</th>
      <th>締切</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
